# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod1

# Font for window titles
font pango:monospace 15px

# Set border pixel size
for_window [class="^.*"] border pixel 2
default_border pixel 2
default_floating_border pixel 2

# Hide borders at the edge of the screen
hide_edge_borders smart

# Kanagawa color scheme mapping
# FujiWhite: Default foreground (#DCD7BA)
# SumiInk1: Default background (#1F1F28)
# WaveBlue1: Popup background, visual selection (#223249)

client.focused           #DCD7BA #1F1F28 #DCD7BA #DCD7BA   #54546D
client.focused_inactive  #16161D #1F1F28 #C8C093 #54546D   #54546D
client.unfocused         #16161D #1F1F28 #C8C093 #16161D   #16161D
client.urgent            #C34043 #1F1F28 #DCD7BA #C34043   #54546D

# Mouse + $mod to drag floating windows to their desired position
floating_modifier $mod

# Basic key bindings

bindsym $mod+Return exec wezterm
bindsym $mod+Shift+q kill
bindsym $mod+d exec --no-startup-id rofi -show drun

# Focus window
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Move window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Split orientation
bindsym $mod+z split h
bindsym $mod+v split v

# Fullscreen toggle
bindsym $mod+f fullscreen toggle

# Container layout
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Tiling / floating toggle
bindsym $mod+Shift+space floating toggle

# Focus parent
bindsym $mod+a focus parent

# Workspace switching
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
...
bindsym $mod+0 workspace 10

# Move container to workspace
bindsym $mod+Shift+1 move container to workspace 1
...
bindsym $mod+Shift+0 move container to workspace 10

# Resize mode
mode "resize" {
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Start polybar
exec --no-startup-id ~/.config/polybar/launch_polybar.sh

# Start applications and services
exec --no-startup-id nm-applet
exec --no-startup-id dunst
exec --no-startup-id feh --bg-fill ~/Pictures/wallpaper.jpg
exec --no-startup-id picom -b
exec --no-startup-id xrandr --output HDMI-A-0 --mode 1920x1080 --rate 144 --dpi 144

# Media keys
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# Brightness controls
bindsym XF86MonBrightnessDown exec brightnessctl set 10%-
bindsym XF86MonBrightnessUp exec brightnessctl set +10%

# Screenshot bindings
bindsym Print exec --no-startup-id maim "/home/$USER/Pictures/$(date)"
bindsym Shift+Print exec --no-startup-id maim --select "/home/$USER/Pictures/$(date)"

# Lock screen
bindsym $mod+Ctrl+l exec --no-startup-id i3lock --nofork --color=24283b

# Disable screensaver and sleep
exec --no-startup-id xset s off
exec --no-startup-id xset -dpms